<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mis_guardias_card_id"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/colorBlanco"
        app:contentPadding="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_centro_salud_id"
                android:textColor="#000000"
                android:textSize="20sp"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_fecha_id"
                android:textColor="#000000"
                android:layout_below="@id/card_centro_salud_id"
                android:textSize="20sp"
                android:padding="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_turno_id"
                android:textColor="#000000"
                android:layout_below="@id/card_fecha_id"
                android:textSize="20sp"
                android:padding="5dp" />
            <Button
                android:id="@+id/select_guard"
                android:layout_width="95dp"
                android:layout_height="94dp"
                android:layout_marginStart="240dp"
                android:layout_marginLeft="240dp"
                android:onClick="selectGuard"
                android:text="elegir_guardia"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.432" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
